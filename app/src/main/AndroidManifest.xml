<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iceman.mp3player">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".utils.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.DetailActivity" />
        <activity
            android:name=".activities.PlayMusicActivity"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".services.PlayMusicService" />

        <activity android:name=".activities.AlbumListActivity"></activity>
        <receiver android:name="com.example.iceman.mp3player.activities.PlayMusicActivity$BroadcastPrevMusic" >
            <intent-filter>
                <action android:name="com.example.iceman.Mp3Player.ACTION_PREV" />
            </intent-filter>
        </receiver>
    </application>

</manifest>